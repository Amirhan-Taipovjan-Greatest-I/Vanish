{
  "schemaVersion": 1,
  "id": "melius-vanish",
  "version": "${version}",
  "name": "Vanish",
  "description": "Completely hide from other players using /vanish",
  "authors": [
    "Drex"
  ],
  "license": "MIT",
  "icon": "assets/vanish/icon.png",
  "environment": "server",
  "entrypoints": {
    "server": [
      "me.drex.vanish.VanishMod"
    ],
    "preLaunch": [
      "com.llamalad7.mixinextras.MixinExtrasBootstrap::init"
    ]
  },
  "custom": {
    "modmanager": {
      "curseforge": 676275,
      "modrinth": "UL4bJFDY"
    },
    "mc-publish": {
      "quilt": true
    }
  },
  "mixins": [
    "vanish.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.8",
    "fabric-command-api-v1": "*",
    "fabric-lifecycle-events-v1": "*",
    "minecraft": "1.18.2",
    "java": ">=17"
  },
  "breaks": {
    "vanish": "*"
  }
}
